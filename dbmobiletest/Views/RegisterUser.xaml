<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fn="clr-namespace:dbmobiletest.Helpers"
    x:Class="dbmobiletest.Views.RegisterUser"
    Title="Register User"
    BackgroundColor="White"
    x:Name="registerUser">
    <StackLayout
        Padding="10">
        <Label
            TextColor="Black"
            Text="Name:"/>
        <Entry
            Text="{Binding Name}"/>
        <Label
            TextColor="Black"
            Text="Last name:"/>
        <Entry
            Text="{Binding LastName}"/>
        <Button
            HorizontalOptions="Center"
            Text="Save"
            Command="{Binding SaveUserCommand}"/>
        <CollectionView
            ItemsSource="{Binding UserList}"
            SelectionMode="None">
            <CollectionView.EmptyView>
                <Label
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"
                    Text="NO DATA FOUND!"/>
            </CollectionView.EmptyView>
            <CollectionView.Header>
                <StackLayout>
                    <Line
                        BackgroundColor="LightGray"
                        X1="500"
                        Y1="1"/>
                    <Label
                        TextColor="Black"
                        HorizontalTextAlignment="Center"
                        Text="User List"/>
                    <Line
                        BackgroundColor="LightGray"
                        X1="500"
                        Y1="1"/>
                </StackLayout>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <StackLayout
                            Padding="0,10"
                            Orientation="Horizontal">
                            <StackLayout>
                                <Label
                                    TextColor="Black"
                                    Text="{Binding Id, StringFormat='Id: {0}'}"/>
                                <Label
                                    TextColor="Black"
                                    Text="{Binding FullName, StringFormat='Name: {0}'}"/>
                            </StackLayout>
                            <Label
                                Margin="0,0,20,0"
                                HorizontalOptions="FillAndExpand"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="End"
                                Text="{x:Static fn:Icons.DeleteIcon}"
                                TextColor="Red"
                                FontFamily="{StaticResource FontAwesomeFreeSolid}"
                                FontSize="18">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Tapped="TapGestureRecognizer_Tapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                        <Line
                            Margin="0,5"
                            BackgroundColor="LightGray"
                            X1="500"
                            Y1="1"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
